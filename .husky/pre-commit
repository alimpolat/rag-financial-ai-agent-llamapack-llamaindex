#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged to check only staged files
npx lint-staged

# Run type checking
npm run type-check

# Run Python linting if Python files are staged
if git diff --cached --name-only | grep -E "\.(py)$" > /dev/null; then
    echo "Running Python linting..."
    npm run py:lint
fi
